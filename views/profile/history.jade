extends ../layout

block header
    h2 There have been #{reports.length} runs

block content

    each report, i in reports

        h3.center #{i}

        h5.center Average

        table.table.cycle.center.table-profile-history
            thead.thead
                tr
                    th.th #
                    each row in app.set('reports')[i].definition()
                        - if(row.unit)
                            th.th #{row.title} (#{row.unit})
                        - else
                            th.th #{row.title}

            tbody.tbody
                tr
                    td.td #{i}
                    each row in app.set('reports')[i].definition()
                        td.td #{report.average.value[row.key]}

        h5.center History

        table.table.cycle.center.table-profile-history
            thead.thead
                tr
                    th.th #
                    each row in app.set('reports')[i].definition()
                        - if(row.unit)
                            th.th #{row.title} (#{row.unit})
                        - else
                            th.th #{row.title}

            tbody.tbody
                tr
                    td.td #{i}
                    each row in app.set('reports')[i].definition()
                        td.td #{report.data[row.key]}
